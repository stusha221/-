<Window x:Class="Текстовый_редактор.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Текстовый_редактор"
        mc:Ignorable="d"
        Title="MainWindow" Height="445" Width="800" FontSize="20" FontFamily="Times New Roman">
    <Grid>
        <TextBox x:Name="tbVvod" HorizontalAlignment="Left" Height="360" Margin="10,10,0,0" TextWrapping="Wrap" Text="Введите текст" VerticalAlignment="Top" Width="520"/>
        <Button Content="Открыть" HorizontalAlignment="Left" Height="65" Margin="560,10,0,0" VerticalAlignment="Top" Width="210" Click="Button_Click_1"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Height="65" Margin="560,100,0,0" VerticalAlignment="Top" Width="210" Click="Button_Click_2"/>
        <Button Content="Очистить" HorizontalAlignment="Left" Height="65" Margin="560,190,0,0" VerticalAlignment="Top" Width="210" Click="Button_Click"/>

    </Grid>
</Window>
